#!/bin/bash
sysctl -w net.ipv4.ip_forward=1

ip link set eth0 up   # verso Y 
ip link set eth1 up   # verso W
ip link set eth2 up   # I (verso rD)

ip addr add 193.0.0.2/30 dev eth0      # indirizzo lato Y (esempio)
ip addr add 100.0.0.1/24  dev eth1      # indirizzo lato W (esempio)
ip addr add 10.0.0.1/30   dev eth2   # rete "Internet" I

ip link set eth0 mtu 1500                    # MTU Y = 1500
ip link set eth1 mtu 1500                    # MTU W = 1500
ip link set eth2 mtu 1500		     # MTU verso I = 1500

# Z via rD
ip route add 200.0.0.0/24 via 10.0.0.2 dev eth2
# reti lato A via rB
ip route add 193.205.142.176/30 via 193.0.0.1 dev eth0
ip route add 193.205.142.0/25   via 193.0.0.1 dev eth0