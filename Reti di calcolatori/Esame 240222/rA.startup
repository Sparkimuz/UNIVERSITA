#!/bin/bash
sysctl -w net.ipv4.ip_forward=1

ip link set eth0 up   # verso A (LA)
ip link set eth1 up   # verso X

ip addr add 193.205.142.177/30 dev eth0      # indirizzo lato A (esempio)
ip addr add 193.205.142.70/25  dev eth1      # indirizzo lato X (esempio)

ip link set eth0 mtu 1500                    # “LAN di fronte ad A” = 1500
ip link set eth1 mtu 1000                    # MTU X = 1000

ip route add 193.0.0.0/30 via 193.205.142.71 dev eth1
ip route add 100.0.0.0/24 via 193.205.142.71 dev eth1
ip route add 200.0.0.0/24 via 193.205.142.71 dev eth1