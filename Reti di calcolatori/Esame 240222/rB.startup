#!/bin/bash
sysctl -w net.ipv4.ip_forward=1

ip link set eth0 up   # verso X 
ip link set eth1 up   # verso Y

ip addr add 193.205.142.71/25 dev eth0      # indirizzo lato X (esempio)
ip addr add 193.0.0.1/30  dev eth1      # indirizzo lato Y (esempio)

ip link set eth0 mtu 1000                    # MTU X = 1000
ip link set eth1 mtu 1500                    # MTU Y = 1500

# verso W e Z passa da rC
ip route add 100.0.0.0/24 via 193.0.0.2 dev eth1
ip route add 200.0.0.0/24 via 193.0.0.2 dev eth1

# (opzionale ma pulito) verso LA passa da rA
ip route add 193.205.142.176/30 via 193.205.142.70 dev eth0