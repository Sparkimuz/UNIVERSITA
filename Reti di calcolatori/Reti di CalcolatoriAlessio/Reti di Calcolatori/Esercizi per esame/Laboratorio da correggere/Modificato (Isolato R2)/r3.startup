# to eth0 a MAC address is assigned
# different from the default one
ip link set dev eth0 address 00:00:00:00:00:c2

# to eth1 a MAC address is assigned
# different from the default one
ip link set dev eth1 address 00:00:00:00:00:r2

# to eth0 an IPv4 address is assigned
ip address add 200.1.1.4/24 dev eth0

# to eth1 an IPv4 address is assigned
ip address add 150.0.0.2/24 dev eth1

# to eth2 an IPv4 address is assigned
# ip address add 160.0.0.1/24 dev eth2

# the routing table is set
ip route add 195.11.14.0/24 via 150.0.0.1 dev eth1

# the routing table is set
ip route add 100.0.0.0/30 via 200.1.1.1 dev eth0

